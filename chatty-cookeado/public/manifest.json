{
  "manifest_version": 3,
  "name": "Chatty",
  "version": "1.0",
  "description": "Chatty, The Web Teacher, is an A.I. that basically guides you through the web.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/chatty.png",
      "48": "/chatty.png",
      "128": "/chatty.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["injector.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["extension.js", "styles/globals.css"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "icons": {
    "16": "/chatty.png",
    "48": "/chatty.png",
    "128": "/chatty.png"
  }
}